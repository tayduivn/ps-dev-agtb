<soda>
	<puts text="Test: Accounts_0056.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create History Subpanel & Click "Full Form" button-->
	<button name="History_createnoteorattachment_button" />
	<button id="Notes_subpanel_full_form_button" />
	<browser assert="Notes" />

	<!--Edit Notes-->
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0036.csv" var="history_record_0056">
		<textfield id="name" set="{@history_record_0056.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@history_record_0056.description}" />
		<filefield name="uploadfile" set="{@history_record_0056.uploadfile}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@history_record_0056.team_name}" />
		<button value="Search" />
		<link text="{@history_record_0056.team_name}" />

		<!--Save the fill fields-->
		<button value="Save" />

		<!--Verify history record has been created in subpanel-->
		<div id="list_subpanel_history">
			<table class="list view">
				<span class="pageNumbers" assert="(1 - 1 of 1)" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0056.xml finished." />
</soda>
