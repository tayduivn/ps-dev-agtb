<soda>
	<puts text="Test: Accounts_0072.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create Case Subpanel & click "Cancel"-->
	<button name="account_cases_create_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0105.csv" var="case_record_0072">
		<form id="form_SubpanelQuickCreate_Cases">
			<textfield id="name" set="{@case_record_0072.name} {@user.name} {@stamp}" />
			<textfield id="description" set="{@case_record_0072.description}" />
			<select id="status" set="{@case_record_0072.status}" />
			<select id="priority" set="{@case_record_0072.priority}" />


			<!--user select-->
			<button id="btn_assigned_user_name" />
		</form>
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@case_record_0072.assigned_user_name}" />
		<button value="Search" />
		<link text="{@case_record_0072.assigned_user_name}" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Cases_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@case_record_0072.team_name}" />
		<button value="Search" />
		<link text="{@case_record_0072.team_name}" />

		<button id="Cases_subpanel_cancel_button" alert="true" />

		<!--Verify-->
		<div id="list_subpanel_cases">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_0072.xml finished." />


</soda>
