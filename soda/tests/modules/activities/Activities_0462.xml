<soda>
	<!-- Create Note_Verify that creating a note can be canceled -->
	<puts text="Test: Activities_0462.xml starting" />

	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="Create Note or Add Attachment" />
	<csv file="{@global.scriptsdir}/modules/lib/Note_Create_Lib.csv" var="activity_record_0462">
		<textfield id="name" set="{@activity_record_0462.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@activity_record_0462.description}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@activity_record_0462.team_name}" />
		<button value="Search" />
		<link text="{@activity_record_0462.team_name}" />

		<button value="Cancel" alert="true" />
	</csv>

	<browser assert="Notes" />

	<puts text="Test: Activities_0462.xml finished" />
</soda>