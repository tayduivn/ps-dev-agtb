<soda>
	<!-- Edit Task_Verify that editing a task from detail view can be canceled. -->
	<puts text="Test: Activities_0506.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Task_Create_Lib.xml" />

	<link id="moduleTab_Activities" />
	<browser assert="Task List" />
	<link text="View Tasks" />
	<wait timeout="3" />
	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@pre_task_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_task_name}" click="false" />
		<row class="oddListRowS1">
			<link index="1" />
		</row>
	</table>
	<wait timeout="3" />
	<browser assert="{@pre_task_name}" />
	<select id="priority" set="Low" />
	<wait timeout="3" />
	<button value="Cancel" alert="true" />

	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />

	<puts text="Test: Activities_0506.xml finished." />
</soda>