<soda>
	<!-- Mass Update_Verify that bugs can be mass updated by Team ID right after saving searched view. -->
	<puts text="Test: BugTracker_3599.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create bug tracker record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--Search the bug tracker record-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<link text="Advanced Search" />
	<wait timeout="1" />
	<textfield id="name_advanced" set="{@pre_bug_name}" /> 
	<textfield name="saved_search_name" set="{@pre_bug_name}" />
	<button name="saved_search_submit" />
	<table class="list view">
		<link text="{@pre_bug_name}" click="false" />
		<link text="Actions" />
	</table>

	<!--update the team value for the record-->
	<link text="Mass Update" />
	<table id="MassUpdate_team_name_table">
		<button value="Select" />
	</table>
	<browser assert="Team Search" />
	<textfield name="name" set="Global" /> 
	<button value="Search" />
	<link text="Global" />
	<radio id="primary_team_name_collection_0" set="true" />
	<checkbox name="massall" set="true" />
	<button id="update_button" alert="true" />

	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />
	<browser assert="Global" />

	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<!-- Saved search delete implicitly reverts to basic search. -->
	<button id="ss_delete" alert="true" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>
	<wait timeout="1" />
	<button id="search_form_submit" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />

	<puts text="Test: BugTracker_3599.xml finished." />
</soda>