<soda>
	<!--  Verify that scheduled calls are searched with advanced search condition -->
	<puts text="Test: Calendar_0681.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/calendar/CalendarAssertText.csv" var="calendar" />

	<!--Create a call record-->
	<script file="{@global.scriptsdir}/modules/lib/Call_Create_Lib.xml" />

	<div id="Calls">
		<link text="View Calls" />
	</div>
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
	</div>

	<link text="Advanced Search" />
	<wait timeout="1" />

	<div id="Callsadvanced_searchSearchForm">
		<textfield id="name_advanced" set="{@pre_call_name}" />
		<select name="assigned_user_id_advanced[]" set="{@call_record.assigned_user_name}" />
		<select name="status_advanced[]" set="{@call_record.status}" />
	</div>

	<form id="search_form">
		<button value="Search" />
	</form>

	<form id="MassUpdate">
		<link text="{@pre_call_name}" click="false" exist="true" />
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
	</form>
	
	<link text="Basic Search" />
	<wait timeout="1" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />

	<puts text="Test: Calendar_0681.xml finished." />
</soda>
