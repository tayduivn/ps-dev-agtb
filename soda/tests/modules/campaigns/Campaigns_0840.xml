<soda>
	<!-- Delete a campaign record -->
	<puts text="Test: Campaigns_0840.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<!--Create a campaign record-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

	<!--Delete the record-->
	<button value="Delete" alert="true" />

	<!--Search the record-->
	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@Campaign_Name}" />
	<button id="search_form_submit" />

	<form id="MassUpdate">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</form>

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0840.xml finished." />
</soda>