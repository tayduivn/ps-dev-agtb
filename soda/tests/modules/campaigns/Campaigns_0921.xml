<soda>
	<!-- Mass update campaign_Verify the "End Date" -->
	<puts text="Test: Campaigns_0921.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<!-- create a campaign record -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

	<!--Search for this campaign in basic search-->
	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button name="clear" />
	</form>
	<textfield id="name_basic" set="{@Campaign_Name}" />
	<form id="search_form">
		<button id = "search_form_submit" />
	</form>
	<form id="MassUpdate">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
	</form>

	<!-- mass update the end date on this record -->
	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0921.csv" var="Campaign0921"> 
		<checkbox name="massall" set="true" />
		<link text="Actions" />
		<link text="Mass Update" />
		<div id="massupdate_form">
			<table id="mass_update_table">
				<textfield id="end_datejscal_field" set="{@Campaign0921.end_date}" />
			</table>
			<button id="update_button" alert="true" />
		</div>

		<!-- advanced search this record by end date -->
		<link id="moduleTab_Campaigns" />
		<form id="search_form">
			<button name="clear" />
		</form>
		<link text="Advanced Search" />
		<div id="Campaignsadvanced_searchSearchForm">
			<textfield id="end_date_advanced" set="{@Campaign0921.end_date}" />
		</div>
		<form id="search_form">
			<button id = "search_form_submit" />
		</form>
		<form id="MassUpdate">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</form>
		
		<checkbox name="massall" set="true" />
		<link text="Actions" />
		<link text="Delete" alert="true" />
	</csv>
	
	<!-- Reset search form to default settings. -->
        <link id="basic_search_link" />
        <wait timeout="2" />	
        <button id='search_form_clear'/>
        <wait timeout="2" />
        <button id="search_form_submit" />

	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0921.xml finished." />
</soda>