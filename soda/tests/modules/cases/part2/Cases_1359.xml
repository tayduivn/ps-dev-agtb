<soda>
   <!-- Schedule Meeting_Verify that schedule meeting for case is not created 
      in "Activities" sub-panel when using "Cancel" function 
   -->

	<puts text="Test: Cases_1359.xml starting." />
   <csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" 
      var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a Meeting-->
	<div id="list_subpanel_activities">
      <button value="  Schedule Meeting  " />
      <wait timeout="3" />
	</div>
	<timestamp />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1359.csv" var="Case_1359">
      <div id="Default_Meetings_Subpanel">
   		<textfield id="name" set="{@Case_1359.name} {@user.name} {@stamp}" />
      </div>
		<button id="Meetings_subpanel_cancel_button" alert="true" />
	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</table>                    
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<puts text="Test: Cases_1359.xml finished." />
</soda>

