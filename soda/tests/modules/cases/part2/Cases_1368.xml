<soda>
	<!-- Edit Scheduled Call_Verify that the information of a scheduled call for case can be modified when using "Edit" function in "Activities" sub-panel -->
	<puts text="Test: Cases_1368.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<timestamp />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create Call-->
	<div id="list_subpanel_activities">
		<button value="  Log Call  " />
      <wait timeout="6" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1368.csv" var="Case_1368">
      <div id="Default_Calls_Subpanel">
   		<textfield id="name" set="{@Case_1368.name} {@user.name} {@stamp}" />
      </div>
		<button id="Calls_subpanel_save_button" />
		<wait timeout="9" />
	</csv>

	<div id="list_subpanel_activities">
		<table class="list view">
			<link class="listViewTdToolsS1" index="1" />
		</table>
	</div>
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
		<browser assert="{@Case_1368.name} {@user.name} {@stamp}" />
	</div>

	<textfield id="name" set="{@Case_1368.new_name} {@user.name} {@stamp}" />
	<button value="Save" />
	<wait timeout="2" />
	<div id="subpanel_activities">
		<link text="{@Case_1368.new_name} {@user.name} {@stamp}" click="false" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1368.xml finished." />
</soda>
