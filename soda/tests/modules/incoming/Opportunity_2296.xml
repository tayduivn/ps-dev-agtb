<soda>
	<puts text="Test: Opportunity_2296.xml starting." />
	<!-- Test for note / activity w/ given team visibility for Opportunities -->

	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2296.csv" var="Opportunity_2296">

		<!--script file="scripts/sugarcrm/modules/lib/Team_Create_Lib.xml"/ -->
		<script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />

		<link id="moduleTab_Opportunities" />

		<link text="Basic Search" required="false" />

		<button id="search_form_clear" />

		<form id="search_form">
			<textfield id="name_basic" set="{@Opportunity_2296.name} {@user.name} {@stamp}" />
		</form>

		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@Opportunity_2296.name} {@user.name} {@stamp}" />
			<link text="{@Opportunity_2296.name} {@user.name} {@stamp}" click="true" />
		</table>

		<browser assert="{@Opportunity_2296.name} {@user.name} {@stamp}" />

		<button value="  Create Note or Attachment  " />

		<!--teams select -->

		<button name="teamSelect" />
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2296.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2296.team_name}" />

		<textfield id="name" set="{@Opportunity_2296.note_name} {@user.name} {@stamp}" />
		<textarea id="description" set="{@Opportunity_2296.note_description}" />
		<button id="Notes_subpanel_save_button" />

		<wait />
		<div id="list_subpanel_history">
			<table class="list view">
				<browser assert="{@Opportunity_2296.note_name} {@user.name} {@stamp}" />
				<link text="{@Opportunity_2296.note_name} {@user.name} {@stamp}" click="false" />
				<link class="listViewTdToolsS1" index="1" />
			</table>
		</div>
		<wait />
		<form id="EditView">
			<textfield id="name"
				set="{@Opportunity_2296.note_name_edit} {@user.name} {@stamp}" />
			<textarea id="description" set="{@Opportunity_2296.note_description_edit}" />
			<button value="Save" />
		</form>
		<div id="list_subpanel_history">
			<table class="list view">
				<browser assert="{@Opportunity_2296.note_name_edit} {@user.name} {@stamp}"
					click="false" />
			</table>
		</div>
		<hidden name="record" var="pre_opp_id" />

		<var var="pre_opp_name" set="{@Opportunity_2296.name} {@user.name} {@stamp}" />

	</csv>
	<!--Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<!--script file="scripts/sugarcrm/modules/lib/Team_Delete_Lib.xml"/ -->
	<puts text="Test: Opportunity_2296.xml finished." />
</soda>
