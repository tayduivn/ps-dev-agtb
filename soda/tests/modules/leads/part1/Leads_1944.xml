<soda>
	<!--
		Compose Email_Verify that "Compose Email" function in "Activities" sub-panel
		works successfully
	-->
	<puts text="Test: Leads_1944.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/Email_Setting_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--go to the leads-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--create a email-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<button value="Compose Email" />
		</table>
	</div>
	<wait timeout="10" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_1944.csv" var="Leads_1944">
		<textfield id="emailSubject0" set="{@Leads_1944.emailSubject0}" />
		<table id="composeHeaderTable0">
			<button index="1" alert="true" />
		</table>
	</csv>
	<wait timeout="25" />
	<!--verify the email-->
	<div id="list_subpanel_history">
		<table class="list view">
			<link text="{@Leads_1944.emailSubject0}" />
		</table>
	</div>
	<browser assert="Sent Emails: {@Leads_1944.emailSubject0}" />
	<!--delete the email-->
	<button value="    Delete    " alert="true" />
	<wait timeout="5" />


	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_1944.xml finished." />
</soda>
