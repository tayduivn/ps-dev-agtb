                                </div>
                            {{/notEq}}
                            <div class="todo-remove">
                                <i class="icon-trash"></i>
                            </div>
                            <div class="todo-date-info">
                                {{#notEq this.attributes.status "Completed"}}
                                    <h6 class="todo-due-date">{{str "DATA_TYPE_DUE"}}: {{this.attributes.date_due}}</h6>
                                {{else}}
                                    <h6 class="todo-finished">Finished!</h6>
                                {{/notEq}}
                            </div>
                        </li>
                    </ul>
                {{/each}}
            {{else}}
                <li class="todo-divider"></li>
                <em class="no-todos">No tasks found.</em>
            {{/if}}
        </div>
        <div id="todo-upcoming" class="tab-pane {{#if upcomingPillActive}}active{{/if}}">
